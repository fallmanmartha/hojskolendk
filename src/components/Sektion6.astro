---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
---

<div class="relative w-screen overflow-hidden">
  <img src="/public/devider.png" class="w-full object-cover" alt="" />

  <section class="absolute inset-0 flex flex-col items-center justify-center">
    <div class="md:grid grid-cols-3 gap-15 text-center text-white">
      <div class="">
        <Heading htmlheading="h3" size="medium" font="display"
          >HØJSKOLE I UDLANDET SIDEN</Heading
        >
        <div class="lg:mt-6 mb-7">
          <Heading
            htmlheading="h1"
            size="xlarge"
            font="display"
            transform="uppercase">2010</Heading
          >
        </div>
      </div>
      <div class="">
        <Heading htmlheading="h3" size="medium" font="display"
          >GLADE ELEVER</Heading
        >
        <div class="lg:mt-6 mb-7">
          <Heading
            htmlheading="h1"
            size="xlarge"
            font="display"
            transform="uppercase">3.000+</Heading
          >
        </div>
      </div>

      <div class="">
        <Heading htmlheading="h3" size="medium" font="display"
          >ANBEFALER HÖJSKOLENDK</Heading
        >
        <div class="lg:mt-6 mb-7">
          <Heading
            htmlheading="h1"
            size="xlarge"
            font="display"
            transform="uppercase">96%</Heading
          >
        </div>
      </div>
    </div>
  </section>
</div>
